{
    "name": "coco",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh"
                    }
                }
            },
            "extensions": [
                "dtsvet.vscode-wasm",
                "ms-python.python",
                "ms-python.black-formatter",
                "the0807.uv-toolkit",
                "charliermarsh.ruff",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "onCreateCommand": [
        "zsh",
        ".devcontainer/setup.sh"
    ]
}